{
  "name": "ajv-errors",
  "version": "3.0.0",
  "description": "Custom error messages in JSON Schemas for Ajv validator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "eslint": "eslint \"src/**/*.*s\" \"spec/**/*.*s\"",
    "prettier:write": "prettier --write \"./**/*.{json,ts,js}\"",
    "prettier:check": "prettier --list-different \"./**/*.{json,ts,js}\"",
    "test-spec": "jest \"spec/*.ts\"",
    "test-cov": "jest \"spec/*.ts\" --coverage",
    "test": "npm run prettier:check && npm run eslint && npm run build && npm run test-cov",
    "preversion": "npm run build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rublea/ajv-errors.git"
  },
  "publishConfig": {
    "registry": "https://artifactory.corp.adobe.com/artifactory/api/npm/npm-aemscreens-release/"
  },
  "keywords": [
    "ajv",
    "json-schema",
    "validator",
    "error",
    "messages"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rublea/ajv-errors/issues"
  },
  "homepage": "https://github.com/rublea/ajv-errors#readme",
  "dependencies": {
    "ajv": "^8.0.1"
  },
  "peerDependencies": {
    "ajv": "^8.0.1"
  },
  "devDependencies": {
    "@ajv-validator/config": "^0.3.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "prettier": "@ajv-validator/config/prettierrc.json",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{json,yaml,js,ts}": "prettier --write"
  }
}
